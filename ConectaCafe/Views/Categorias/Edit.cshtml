@model ConectaCafe.Models.Categoria

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-success shadow-success border-radius-lg pt-4 pb-3">
                    <h4 class="text-white text-capitalize ps-3">@ViewData["Title"]</h4>
                    <h6 class="text-white text-capitalize ps-3">Editar</h6>
                </div>
            </div>

            <div class="card-body pb-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id">
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" for="floatingInput" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                    </div>

                    <div class="pb-3">
                        <input type="submit" value="Editar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-success">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

