                        <div class="row">
                        <div class="col-8 mb-3">
                        <div class="input-group input-group-outline mb-1">
                        <label asp-for="CategoriaId" for="floatingInput" class="form-label"></label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
                        <option disabled></option>
                        </select>
                        </div>
                        <span asp-validation-for="CategoriaId" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-4 me-3">
                        <div class="input-group input-group-outline mb-1">
                        <label asp-for="Preco" for="floatingInput" class="form-label"></label>
                        <input asp-for="Preco" class="form-control" />
                        </div>
                        <span asp-validation-for="Preco" class="text-danger text-sm"></span>
                        </div>
                        </div>
                        *@
                    </div>

                    <div class="col-lg-4 col-md-3">
                        <img id="Preview" src='@(Model.Foto ?? Url.Content("~/img/sem-foto.png"))' class="w-75" alt="Sem foto" onclick="changeImage()">
                        <input type="hidden" asp-for="Foto" readonly>
                        <input type="file" id="Arquivo" name="Arquivo" accept=".jpg, .jpeg, .png, .gif" hidden>
                    </div>

                    <div class="pb-3">
                        <input type="submit" value="Criar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-success">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






<h1>Details</h1>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataBlog)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataBlog)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
